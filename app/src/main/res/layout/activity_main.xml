<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vitaliytsyapa.fsm.MainActivity">

    <Button
        android:id="@+id/buttonLock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lock"
        android:textAllCaps="false"
        android:layout_alignBaseline="@+id/buttonUnlock"
        android:layout_alignBottom="@+id/buttonUnlock"
        android:layout_alignStart="@+id/buttonLockX2" />

    <Button
        android:id="@+id/buttonUnlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unlock"
        android:textAllCaps="false"
        tools:layout_editor_absoluteX="238dp"
        tools:layout_editor_absoluteY="342dp"
        android:layout_above="@+id/buttonUnlockX2"
        android:layout_alignStart="@+id/buttonUnlockX2"
        android:layout_marginBottom="30dp" />

    <Button
        android:id="@+id/buttonLockX2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lockx2"
        android:textAllCaps="false"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="429dp"
        android:layout_alignBaseline="@+id/buttonUnlockX2"
        android:layout_alignBottom="@+id/buttonUnlockX2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="44dp" />

    <Button
        android:id="@+id/buttonUnlockX2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unlockx2"
        android:textAllCaps="false"
        tools:layout_editor_absoluteX="238dp"
        tools:layout_editor_absoluteY="429dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="52dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="201dp"
        android:layout_height="141dp"
        android:text="@string/disarmed"
        android:gravity="center"
        android:background="@color/green"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="83dp"
        android:layout_marginBottom="83dp"
        android:layout_above="@+id/buttonLock"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
